<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:longClickable="true"
    android:background="@color/pure_white">

    <TextView
        android:id="@+id/tv_work_day"
        style="@style/honey_font_15_black_40"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="06/11 (í† )"/>

    <TextView
        android:id="@+id/tv_from_time"
        style="@style/honey_font_17_black_80"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/tv_work_day"
        android:gravity="center_vertical"
        android:text="09:00"/>

    <TextView
        android:id="@+id/tv_work_time"
        style="@style/honey_font_19_pinkish_red_bold"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:text="08:14"/>

    <TextView
        android:id="@+id/tv_to_time"
        style="@style/honey_font_17_black_80"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:layout_marginRight="50dp"
        android:layout_toLeftOf="@id/tv_work_time"
        android:text="18:00"/>

</RelativeLayout>